                <label class="form_producto" for="num">Numero del puesto:</label>
                <input class="form_producto" type="number" name="numero" id="num" placeholder="Numero" />
              </div>
              <div>
                <label class="form_producto" for="due">Dueño:</label>
                <input class="form_producto" type="text" id="due" name="duenio" placeholder="Dueño" />
              </div>
              <center> <button class="boton btn btn-primary mt-4">Enviar</button></center>
             
            </form>
          </div>
        </div>
      </div>
    </div>
    
    <%- include('../partials/bootstrapjs.ejs') %>
  </body>
</html>
