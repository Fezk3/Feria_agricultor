<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partials/bootstrapcss.ejs') %>
    <title>Feria del Agricultor</title>
  </head>
  <body>
    <h1>Bienvenido!</h1>

    <% for(let puesto of puestos) { %>
    <ul>
      <h2>
        Puesto numero:
        <a href="/puestos/<%=puesto._id%>"><%= puesto.numero %></a>
      </h2>
      <h3>Productos:</h3>
      <ul>
        <% for(let product of puesto.products) { %>
        <li><%= product.nombre %></li>
        <% }%>
      </ul>
    </ul>
    <% }%> <%- include('partials/bootstrapjs.ejs') %>
  </body>
</html>
